; Theme info
name = 'Tb Page'
description = TB Page is a light weight Drupal theme that is based on <a href="http://themebrain.com/about-nucleus">Nucleus</a> and shows a slick styling of some basic Drupal content types such as blog, poll, forum and a contact form. Requires <a href="http://drupal.org/project/nucleus">Nucleus</a> base theme.
core = '7.x'
engine = 'phptemplate'
base theme = 'nucleus'
screenshot = 'screenshot.png'

; Stylesheets
stylesheets[all][] = 'css/html-elements.css'
stylesheets[all][] = 'css/forms.css'
stylesheets[all][] = 'css/page.css'
stylesheets[all][] = 'css/articles.css'
stylesheets[all][] = 'css/comments.css'
stylesheets[all][] = 'css/forum.css'
stylesheets[all][] = 'css/fields.css'
stylesheets[all][] = 'css/blocks.css'
stylesheets[all][] = 'css/navigation.css'
stylesheets[all][] = 'css/fonts.css'
stylesheets[all][] = 'css/views.css'

; Seperate CSS3 to css3.css
stylesheets[all][] = 'css/css3.css'

; Stylesheets for Print Media
stylesheets[print][] = 'css/print.css'

; Conditional Stylesheets for IE
stylesheets-conditional[IE][all][] = css/ie.css
stylesheets-conditional[lt IE 9][all][] = css/ie8.css

; Scripts in this theme
scripts[] = 'js/iscroll.js'
scripts[] = 'js/jquery.mousewheel.min.js'
scripts[] = 'js/jquery.matchHeights.min.js'
scripts[] = 'js/tb_page.js'
scripts[] = 'js/jquery.smooth-scroll.js'
scripts[] = 'js/tb.plugins.js'

; Responsive
stylesheets[only screen and (max-width:719px)][] = 'css/screens/mobile.css'
stylesheets[only screen and (max-width:479px)][] = 'css/screens/mobile-vertical.css'
stylesheets[only screen and (min-width: 720px) and (max-width: 959px)][] = 'css/screens/tablet-vertical.css'
stylesheets[only screen and (min-width: 959px) and (max-width: 1049px)][] = 'css/screens/tablet.css'

; Core regions
regions[content] = 'Main content'
regions[help] = 'Help'
regions[page_home] = 'Home'
regions[page_introduction] = 'Introduction'
regions[page_portfolio] = 'Portfolio'
regions[page_team] = 'Team'
regions[page_client] = 'Client'
regions[page_contact] = 'Contact'
regions[footer] = 'Footer'

; Sidebar regions
regions[sidebar_first] = 'Sidebar first'
;regions[sidebar_second] = 'Sidebar second'

; Sidebar width settings
settings[sidebar_first_width] = 5

; panel regions
;regions[panel_first_1] = 'Panel first column 1'
;regions[panel_first_2] = 'Panel first column 2'

; one page menus
onepage_menu[page_home] = 'Home'

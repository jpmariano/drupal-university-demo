
name = 'Sitename TB Uber'
description = TB Uber is a Drupal theme that is based on <a href="http://themebrain.com/about-nucleus">Nucleus</a> and shows a slick styling of some basic Drupal content types such as blog, poll, forum and a contact form. Requires <a href="http://drupal.org/project/nucleus">Nucleus</a> base theme.
core = '7.x'
engine = 'phptemplate'
base theme = 'tb_uber'
screenshot = 'screenshot.png'


; Howard Font Stylesheets 
stylesheets[all][] = 'fonts/howard/howard-font.css'

; Conditional Stylesheets for IE
stylesheets-conditional[IE][all][] = 'css/ie.css'
stylesheets-conditional[IE 9][all][] = 'css/ie7.css'
stylesheets-conditional[IE 7][all][] = 'css/ie7.css'

; Stylesheets
stylesheets[all][] = 'css/footable.core.min.css'
stylesheets[all][] = 'css/footable.metro.css'
stylesheets[all][] = 'css/styles.css'

; Scripts
scripts[] = 'js/jquery.fitvids.js'
scripts[] = 'js/footable.js'
scripts[] = 'js/jquery-migrate-1.2.1.js'
scripts[] = 'js/scripts.js' 




; Core regions
regions[content] = 'Main content'
regions[menu_bar] = 'Menu bar'
regions[right_sidebar_header] = 'Right Sidebar Header'
regions[right_sidebar_body] = 'Right Sidebar Body'
regions[navigation_bar] = 'Navigation Bar'
regions[highlighted] = 'Highlighted'
regions[help] = 'Help'
regions[footer_left] = 'Footer Column Left'
regions[footer_right] = 'Footer Column Right'

; Sidebar regions
regions[sidebar_first] = 'Sidebar first'
;regions[sidebar_second] = 'Sidebar second'

; panel regions

; Features (core settings)
features[] = 'logo'
features[] = 'name'
features[] = 'slogan'
features[] = 'node_user_picture'
features[] = 'comment_user_picture'
features[] = 'comment_user_verification'
features[] = 'favicon'
features[] = 'go_to_top_button'
features[] = 'secondary_menu'

; Breadcrumb
settings[breadcrumb_display] = 'yes'
settings[breadcrumb_separator] = ' &#187; '
settings[breadcrumb_home] = 1

; Layouts
pages[default] = 'Normal page'

; Default settings
settings[grid] = 'fluid-grid-24'
settings[layout_width] = '1920px'
settings[layout_debug_grid] = 0
settings[page_layout] = 'default'

; Panel width settings

; Fonts
settings[base_font] = 'bf-a'

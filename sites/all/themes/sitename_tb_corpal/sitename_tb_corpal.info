
name = 'Sitename TB Corpal'
description = TB Corpal is a Drupal theme that is based on <a href="http://themebrain.com/about-nucleus">Nucleus</a> and shows a slick styling of some basic Drupal content types such as blog, poll, forum and a contact form. Requires <a href="http://drupal.org/project/nucleus">Nucleus</a> base theme.
core = '7.x'
engine = 'phptemplate'
base theme = 'tb_corpal'
screenshot = 'screenshot.png'



; Howard Font Stylesheets 
stylesheets[all][] = 'fonts/howard/howard-font.css'

; Conditional Stylesheets for IE
stylesheets-conditional[IE][all][] = 'css/ie.css'
stylesheets-conditional[IE 9][all][] = 'css/ie7.css'
